{
  "name": "gatsby-theme-maximeheckel",
  "description": "Gatsby theme for maximeheckel.com and other consumer gatsby projects",
  "version": "0.1.1",
  "main": "index.js",
  "author": "Maxime Heckel <hello@maximeheckel.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"src/**/*.{js|ts|tsx}\"",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@emotion/core": "^10.0.6",
    "@emotion/styled": "^10.0.6",
    "@mdx-js/mdx": "^0.16.6",
    "@mdx-js/tag": "^0.16.6",
    "emotion-theming": "^10.0.6",
    "gatsby": "^2.13.45",
    "gatsby-image": "^2.0.20",
    "gatsby-mdx": "^1.0.0",
    "gatsby-plugin-emotion": "^4.0.1",
    "gatsby-plugin-google-analytics": "^2.0.9",
    "gatsby-plugin-react-helmet": "^3.0.2",
    "gatsby-plugin-sharp": "^2.0.14",
    "gatsby-plugin-typography": "^2.2.5",
    "gatsby-remark-autolink-headers": "^2.0.12",
    "gatsby-remark-images": "^3.0.1",
    "gatsby-transformer-sharp": "^2.1.8",
    "react-anchor-link-smooth-scroll": "^1.0.11",
    "react-helmet": "^5.2.0",
    "react-switch": "^4.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.7",
    "identity-obj-proxy": "^3.0.0",
    "is-ci-cli": "^1.1.1",
    "jest": "^23.0.1",
    "jest-dom": "^3.0.2",
    "jest-emotion": "^10.0.7",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0"
  },
  "peerDependencies": {
    "react": "16.8.0",
    "react-dom": "16.8.0"
  },
  "jest": {
    "snapshotSerializers": [
      "jest-emotion"
    ],
    "setupTestFrameworkScriptFile": "./setup-jest.js",
    "globals": {
      "__PATH_PREFIX__": "",
      "ts-jest": {
        "diagnostics": false,
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(tsx?|jsx?)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(gatsby)/)"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "node_modules",
      ".cache"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "typeface-*": "identity-obj-proxy",
      ".+\\.(css|styl|less|sass|scss)$": "identity-obj-proxy",
      ".+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file.js"
    },
    "collectCoverage": false,
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  }
}
